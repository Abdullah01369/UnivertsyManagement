@using UnivertsyManagement.Models.ViewModels
@model StudentIndexViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

<div class="container-fluid">
    <!-- Small boxes (Stat box) -->
    <br />
    <br />
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.Student.GANO</h3>

                    <p>GANO</p>
                </div>
                <div class="icon">
                    <i class="ion ion-bag"></i>
                </div>
                <a href="#" class="small-box-footer">Daha Fazla Bilgi <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@ViewBag.Countlesson</h3>

                    <p>Alınan Ders Sayısı</p>
                </div>
                <div class="icon">
                    <i class="ion ion-stats-bars"></i>
                </div>
                <a href="/Exam/LessonList" class="small-box-footer">Daha Fazla Bilgi <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.Student.Sinif.Level - @Model.Student.Department.NameDepartment</h3>
                  

                    <p>Sınıf-Bölüm</p>
                    
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
                <a href="#" class="small-box-footer">Daha Fazla Bilgi <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@Model.Student.Consultant.Name @Model.Student.Consultant.Surname</h3>

                    <p>Danışman İletişim</p>
                </div>
                <div class="icon">
                    <i class="ion ion-pie-graph"></i>
                </div>
                <a href="#" class="small-box-footer">Daha Fazla Bilgi<i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>

    <br />
    <br />
    <div style="padding:40px;">
      


        @foreach (var item in Model.Announcements)
        {
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h1 style="font-size: 25px; color: #148A9D" class="card-title">@item.Title.ToUpper()</h1>
                            <br />
                            <br />
                            <p style="font-family:Constantia;font-size:20px;" class="card-text">@item.Content</p>
                            <span style="font-family:'Bodoni MT';font-size:20px"> @item.AddingDate</span>
                        </div>
                    </div>
                </div>
            </div>
            <br /> 
            <br />
        }

    </div>
</div><!-- /.container-fluid -->
